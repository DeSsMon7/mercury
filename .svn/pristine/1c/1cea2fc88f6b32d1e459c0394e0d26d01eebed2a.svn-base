<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:ui="http://xmlns.jcp.org/jsf/facelets"
      xmlns:h="http://xmlns.jcp.org/jsf/html"
      xmlns:f="http://xmlns.jcp.org/jsf/core"
      xmlns:p="http://primefaces.org/ui">

    <ui:composition>

        <p:dialog id="InvoiceEditDlg" widgetVar="InvoiceEditDialog" modal="true" resizable="false" appendTo="@(body)" header="#{msgs_EN.EditInvoiceTitle}">
            <h:form id="InvoiceEditForm">
                <h:panelGroup id="display">
                    <p:panelGrid columns="2" rendered="#{invoiceController.selected != null}">
                        <p:outputLabel value="#{msgs_EN.EditInvoiceLabel_invoiceId}" for="invoiceId" />
                        <p:inputText id="invoiceId" value="#{invoiceController.selected.invoiceId}" title="#{msgs_EN.EditInvoiceTitle_invoiceId}" required="true" requiredMessage="#{msgs_EN.EditInvoiceRequiredMessage_invoiceId}"/>
                        <p:outputLabel value="#{msgs_EN.EditInvoiceLabel_invoiceDate}" for="invoiceDate" />
                        <p:calendar id="invoiceDate" pattern="MM/dd/yyyy" value="#{invoiceController.selected.invoiceDate}" title="#{msgs_EN.EditInvoiceTitle_invoiceDate}"  showOn="button"/>
                        <p:outputLabel value="#{msgs_EN.EditInvoiceLabel_invoicePrice}" for="invoicePrice" />
                        <p:inputText id="invoicePrice" value="#{invoiceController.selected.invoicePrice}" title="#{msgs_EN.EditInvoiceTitle_invoicePrice}" />
                        <p:outputLabel value="#{msgs_EN.EditInvoiceLabel_customerId}" for="customerId" />
                        <p:selectOneMenu id="customerId" value="#{invoiceController.selected.customerId}" >
                            <f:selectItem itemLabel="#{msgs_EN.SelectOneMessage}"/>
                            <f:selectItems value="#{customerController.itemsAvailableSelectOne}"
                                           var="customerIdItem"
                                           itemValue="#{customerIdItem}"/>
                        </p:selectOneMenu>
                        <p:outputLabel value="#{msgs_EN.EditInvoiceLabel_employeeId}" for="employeeId" />
                        <p:selectOneMenu id="employeeId" value="#{invoiceController.selected.employeeId}" >
                            <f:selectItem itemLabel="#{msgs_EN.SelectOneMessage}"/>
                            <f:selectItems value="#{employeeController.itemsAvailableSelectOne}"
                                           var="employeeIdItem"
                                           itemValue="#{employeeIdItem}"/>
                        </p:selectOneMenu>
                    </p:panelGrid>
                    <p:commandButton actionListener="#{invoiceController.update}" value="#{msgs_EN.Save}" update="display,:InvoiceListForm:datalist,:growl" oncomplete="handleSubmit(args, 'InvoiceEditDialog');"/>
                    <p:commandButton value="#{msgs_EN.Cancel}" onclick="InvoiceEditDialog.hide()"/>
                </h:panelGroup>
            </h:form>
        </p:dialog>

    </ui:composition>
</html>
